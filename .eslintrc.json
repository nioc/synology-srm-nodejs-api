{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
      "standard",
      "plugin:security/recommended",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
      "comma-dangle": ["error", "always-multiline"]
  }
}